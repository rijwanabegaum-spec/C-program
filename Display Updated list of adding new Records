#include <stdio.h>

int main() {
    int arr[10];
    int n, i, newElement;

    printf("Enter number of elements: ");
    scanf("%d", &n);
    for(i = 0; i < n; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }
    printf("Enter new element to add: ");
    scanf("%d", &newElement);

    arr[n] = newElement;   
    n++;                  

    printf("\nUpdated array:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    return 0;
}

#include <stdio.h>

int main() {
    int n;
    float marks1, marks2, marks3, total;

    printf("Enter the number of students: ");
    scanf("%d", &n);

    for(int i = 1; i <= n; i++) {
        printf("\n--- Enter marks for Student %d ---\n", i);

        printf("Marks for subject 1: ");
        scanf("%f", &marks1);

        printf("Marks for subject 2: ");
        scanf("%f", &marks2);

        printf("Marks for subject 3: ");
        scanf("%f", &marks3);

        total = marks1 + marks2 + marks3;
        printf("Total marks for student %d: %.2f\n", i, total);
    }

    return 0;
}

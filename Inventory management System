#include <stdio.h>
#include <string.h>
struct Item {
    int id;
    char name[20];
    int quantity;
};
int main() {
    struct Item items[10];
    int n = 0;  
    int choice;      
    int searchId, i;
    while(1) {
        printf("\n--- Inventory Menu ---\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item by ID\n");
        printf("4. Update Item by ID\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        if(choice == 5) {
            printf("Exiting program.\n");
            break;  
        }
        switch(choice) {
            case 1: 
                printf("Enter ID: ");
                scanf("%d", &items[n].id);
                printf("Enter Name: ");
                scanf("%s", items[n].name);
                printf("Enter Quantity: ");
                scanf("%d", &items[n].quantity);
                n++;
                printf("Item added successfully!\n");
                break;
            case 2: 
                if(n == 0) {
                    printf("No items to display!\n");
                } else {
                    printf("\nAll Items:\n");
                    for(i = 0; i < n; i++) {
                        printf("%d %s %d\n", items[i].id, items[i].name, items[i].quantity);
                    }
                }
                break;
            case 3: 
                if(n == 0) {
                    printf("No items to search!\n");
                } else {
                    printf("Enter ID to search: ");
                    scanf("%d", &searchId);
                    int found = 0;
                    for(i = 0; i < n; i++) {
                        if(items[i].id == searchId) {
                            printf("Item Found: %d %s %d\n", items[i].id, items[i].name, items[i].quantity);
                            found = 1;
                            break;
                        }
                    }
                    if(!found) printf("Item not found!\n");
                }
                break;
            case 4: 
                if(n == 0) {
                    printf("No items to update!\n");
                } else {
                    printf("Enter ID to update: ");
                    scanf("%d", &searchId);
                    int found = 0;
                    for(i = 0; i < n; i++) {
                        if(items[i].id == searchId) {
                            printf("Enter new Name: ");
                            scanf("%s", items[i].name);
                            printf("Enter new Quantity: ");
                            scanf("%d", &items[i].quantity);
                            printf("Item updated successfully!\n");
                            found = 1;
                            break;
                        }
                    }
                    if(!found) printf("Item not found!\n");
                }
                break;
            default:
                printf("Invalid choice! Try again.\n");
        }
    }
    return 0;
}

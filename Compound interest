#include <stdio.h>
#include <math.h>

int main() {
    double P, r, t, A, CI;
    printf("Enter principal amount: ");
    scanf("%lf", &P);

    printf("Enter annual interest rate (in %%): ");
    scanf("%lf", &r);

    printf("Enter time in years: ");
    scanf("%lf", &t);
    A = P * pow(1 + r / 100, t);
    CI = A - P;
    printf("\nCompound Interest = %.2lf\n", CI);
    printf("Total Amount after %.2lf years = %.2lf\n", t, A);

    return 0;
}

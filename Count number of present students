#include <stdio.h>

int main() {
    int n, i;
    int attendance;
    int present_count = 0;
    printf("Enter number of students: ");
    scanf("%d", &n);
    for (i = 1; i <= n; i++) {
        printf("Enter attendance for student %d (1 = Present, 0 = Absent): ", i);
        scanf("%d", &attendance);

        if (attendance == 1) {
            present_count++; 
        }
    }
    printf("\nNumber of present students = %d\n", present_count);

    return 0;
}

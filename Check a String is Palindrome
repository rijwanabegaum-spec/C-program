#include <stdio.h>

int main() {
    char str[100];
    int start = 0, end, flag = 1; 

    printf("Enter a string: ");
    scanf("%s", str);
    for(end = 0; str[end] != '\0'; end++);
    end = end - 1;  
    while(start < end) {
        if(str[start] != str[end]) {
            flag = 0; 
            break;     
        }
        start++;
        end--;
    }
    if(flag == 1)
        printf("The string is a palindrome.\n");
    else
        printf("The string is not a palindrome.\n");
    return 0;
}

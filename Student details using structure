#include <stdio.h>

struct student
{
    int roll;
    char name[30];
    int marks;
};
int main()
{
    struct student s[3];
    int i;

    for(i = 0; i < 3; i++)
    {
        printf("\nEnter details of student %d\n", i + 1);
        printf("Roll No: ");
        scanf("%d", &s[i].roll);
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Marks: ");
        scanf("%d", &s[i].marks);
    }
    printf("\nStudent Details\n");
    for(i = 0; i < 3; i++)
    {
        printf("\nRoll: %d  Name: %s  Marks: %d",
               s[i].roll, s[i].name, s[i].marks);
    }
    return 0;
}
